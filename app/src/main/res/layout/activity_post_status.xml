<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_post_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_post" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/show_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_status"
            tools:ignore="InvalidId" />

    </LinearLayout>


    <EditText
        android:id="@+id/et_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter status text" />

    <TextView
        android:id="@+id/tv_choose_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Choose media:"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_choose_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_photo"
            android:contentDescription="Choose image" />

        <ImageButton
            android:id="@+id/btn_choose_video"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_video"
            android:contentDescription="Choose video" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_status_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/vv_status_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />



</LinearLayout>
